# Auto-detect text files and perform LF normalization
* text=auto

# These files are text and should be normalized (convert to LF)
*.rs text
*.toml text
*.md text
*.yml text
*.yaml text
*.json text
*.txt text
*.sh text eol=lf

# These files are binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.db binary
*.db-* binary

# Rust files should use Rust syntax highlighting
*.rs linguist-language=Rust

# Dockerfiles
Dockerfile* linguist-detectable=true

# GitHub Actions workflow files
.github/workflows/*.yml linguist-detectable=true
.github/workflows/*.yaml linguist-detectable=true

# Export files should be treated as binary
*.json binary
*.csv binary
*.html binary
*.pdf binary
*.xml binary

# Force LF line endings for shell scripts
*.sh text eol=lf

# Don't diff binary database files
*.db -diff
*.db-* -diff

# Export files should not be diffed by default
*.json -diff
*.csv -diff
*.html -diff
*.pdf -diff
*.xml -diff
