# Port-ZiLLA Environment Configuration
# Copy this file to .env and modify as needed

# Database Configuration
DATABASE_URL=sqlite:portzilla.db
DATABASE_MAX_CONNECTIONS=20

# Scanner Configuration
SCANNER_TIMEOUT_MS=1000
SCANNER_MAX_THREADS=200
SCANNER_RATE_LIMIT=

# Security Configuration
ALLOWED_TARGETS=
MAX_PORTS_PER_SCAN=65535
REQUIRE_AUTHENTICATION=false

# API Configuration
API_ENABLED=false
API_BIND_ADDRESS=127.0.0.1:8080
API_AUTH_ENABLED=true
API_DEFAULT_KEY=portzilla-default-key-2024

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=detailed
LOG_TO_FILE=true
LOG_DIRECTORY=logs

# Export Configuration
EXPORT_FORMAT=json
EXPORT_DIRECTORY=exports
AUTO_EXPORT=false
